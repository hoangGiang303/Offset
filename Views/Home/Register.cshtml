@{
    Layout = "";
}

@model User

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

<a asp-controller="Home" asp-action="Index" class="home">
    <i class="fa-solid fa-house"></i>
    Quay lại trang chủ
</a>

@using (Html.BeginForm("Register", "Home", FormMethod.Post)) {
    <div class="notice">@TempData["Message"]</div>
    @Html.Label("firstname", "First Name")
    @Html.TextBoxFor(x=>x.FirstName, new { required = "required" })
    @Html.Label("lastname", "Last Name")
    @Html.TextBoxFor(x=>x.LastName, new { required = "required" })
    @Html.Label("date", "Date Of Birth")
    @Html.TextBoxFor(x=>x.Dob, new { @type = "date", @required = "required" })
    @Html.Label("email", "Email")
    @Html.TextBoxFor(x=>x.Email, new {type="email", required = "required" })
    @Html.Label("password", "Password")
    @Html.TextBoxFor(x=>x.Password, new { type="password", required = "required", minlength="6", maxlength="20", placeholder="Độ dài 6-20 kí tự" })
    @Html.Label("confirmpassword", "Confirm Password")
    @Html.TextBox("confirmpassword", "", new { type = "password", minlength = "6", maxlength = "20", required = "required" })
    <div class="checkbox-container">
        @Html.CheckBox("checkbox", false)
        @Html.Label("privacy", "I accept privacy policy")
    </div>
    <button type="submit">Register</button>
}

<style>
    .home {
        display: block;
        text-align: center;
        text-decoration: none;
        font-size: 18px;
        font-weight: bold;
        color: #007bff;
        margin: 20px 0px;
        transition: color 0.3s ease;
    }

    .home:hover {
        color: #0056b3;
    }

    form {
        width: 350px;
        margin: auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background: #f9f9f9;
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .notice {
        text-align: center;
        color: red;
        font-weight: bold;
        margin-bottom: 10px;
    }

    label {
        font-weight: bold;
        margin-top: 10px;
    }

    input[type="text"],
    input[type="email"],
    input[type="password"],
    input[type="date"] {
        width: 100%;
        padding: 8px;
        margin-top: 5px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 14px;
    }

    .checkbox-container {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-top: 10px;
    }

    button {
        margin-top: 15px;
        padding: 10px;
        background-color: #28a745;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
    }

        button:hover {
            background-color: #218838;
        }

    /* Căn chỉnh checkbox với label */
    .checkbox-container {
        display: flex;
        align-items: center;
        gap: 5px;
    }

</style>