
@{
    Layout = "";
}

@model User

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

<div class="login-container">
    <a asp-controller="Home" asp-action="Index" class="home">
        <i class="fa-solid fa-house"></i>
        Quay lại trang chủ
    </a>

    @using (Html.BeginForm("LogIn", "Home", FormMethod.Post))
    {
        <div class="notice">@TempData["Message"]</div>
        @Html.Label("email", "Email")
        @Html.TextBoxFor(x => x.Email, new { type = "email", required = "required" })
        @Html.Label("password", "Password")
        @Html.TextBoxFor(x => x.Password, new { type = "password", required = "required" })
        <button type="submit">Log in</button>
    }
</div>

<style>
    .login-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
    }

    .home {
        display: block;
        text-align: center;
        text-decoration: none;
        font-size: 18px;
        font-weight: bold;
        color: #007bff;
        margin: 20px 0px;
        transition: color 0.3s ease;
    }

        .home:hover {
            color: #0056b3;
        }

    form {
        width: 350px;
        margin: 0px auto;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        background: #fff;
    }

    .notice {
        text-align: center;
        color: red;
        font-weight: bold;
        margin-bottom: 10px;
    }

    input[type="email"], input[type="password"] {
        width: 100%;
        padding: 10px;
        margin: 5px 0 15px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
    }

    button {
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 18px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        button:hover {
            background-color: #0056b3;
        }

</style>